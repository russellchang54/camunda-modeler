{
  "appId": "com.camunda.CamundaModeler",
  "productName": "Camunda Modeler",
  "directories": {
    "output": "distro"
  },
  "files": [
    {
      "filter": [
        "**",
        "build/favicon.png",
        "!test",
        "!dev.js"
      ]
    }
  ],
  "afterPack": "./tasks/copy-assets.js",
  "win": {
    "target": [
      "nsis",
      "zip"
    ]
  },
  "linux": {
    "category": "Development",
    "target": [
      "tar.gz"
    ]
  },
  "fileAssociations": [
    {
      "ext": "bpmn",
      "name": "CamundaModeler.BPMN",
      "description": "BPMN file",
      "role": "Editor"
    },
    {
      "ext": "dmn",
      "name": "CamundaModeler.DMN",
      "description": "DMN file",
      "role": "Editor"
    },
    {
      "ext": "cmmn",
      "name": "CamundaModeler.CMMN",
      "description": "CMMN file",
      "role": "Editor"
    }
  ]
}